---
/**
 * Marketing Layout
 * Dedicated layout for marketing/landing pages with transparent header and editorial footer.
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import MarketingFooter from '@/components/marketing/MarketingFooter.astro';
import '@/styles/marketing.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} imageAlt={imageAlt}>
  <Header
    slot="header"
    shape="floating"
    variant="transparent"
    position="fixed"
    colorScheme="invert"
    showCta={true}
    cta={{ label: 'Get Started', href: '#get-started' }}
    actions={[{ icon: 'github', href: 'https://github.com/southwellmedia/velocity', label: 'GitHub', iconOnly: true, target: '_blank' }]}
    showLanguageSwitcher={false}
  />

  <slot />

  <MarketingFooter slot="footer" />
</BaseLayout>
