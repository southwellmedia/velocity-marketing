---
/**
 * PageLayout
 * Layout wrapper for standard content pages (non-landing)
 * Uses Header + Footer for consistent navigation
 * Used when demo content is not included
 */
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { title, description, image, imageAlt, noindex, nofollow } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
  noindex={noindex}
  nofollow={nofollow}
>
  <Header slot="header" />

  <main class="min-h-screen pt-16">
    <slot />
  </main>

  <Footer slot="footer" />
</BaseLayout>
