---
import { cn } from '@/lib/cn';

const showcaseItems = [
  { name: 'Acme SaaS', description: 'B2B SaaS platform with dashboard and analytics', gradient: 'from-brand-500/20 to-brand-700/20' },
  { name: 'Studio Portfolio', description: 'Creative agency portfolio with case studies', gradient: 'from-blue-500/20 to-purple-500/20' },
  { name: 'DevBlog Pro', description: 'Technical blog with MDX, code highlighting, and RSS', gradient: 'from-emerald-500/20 to-teal-500/20' },
  { name: 'CloudDash', description: 'Infrastructure monitoring dashboard', gradient: 'from-violet-500/20 to-indigo-500/20' },
  { name: 'Nomad Travel', description: 'Travel booking platform with search and filters', gradient: 'from-amber-500/20 to-orange-500/20' },
  { name: 'HealthTrack', description: 'Health and fitness tracking application', gradient: 'from-rose-500/20 to-pink-500/20' },
];
---

<section id="showcase" class="py-[var(--space-section)]">
  <div class="container">
    <header class="text-center max-w-2xl mx-auto" style="margin-bottom: var(--space-section-header);">
      <h2 class="font-display font-bold tracking-tight text-foreground" style="font-size: var(--text-4xl);">
        Built with Velocity
      </h2>
      <p class="mt-4 text-lg text-foreground-muted">
        See what developers are shipping with the Velocity starter kit.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {showcaseItems.map((item) => (
        <a href="#" class="group block hover-lift">
          <div class="browser-frame">
            <div class="h-7 bg-background-tertiary flex items-center gap-1.5 px-3">
              <div class="w-2.5 h-2.5 rounded-full bg-foreground-subtle/30"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-foreground-subtle/30"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-foreground-subtle/30"></div>
            </div>
            <div class={cn('aspect-video bg-gradient-to-br', item.gradient)}>
              {/* gradient placeholder for screenshot */}
            </div>
          </div>
          <div class="pt-4">
            <h3 class="font-display font-semibold text-foreground group-hover:text-brand-500 transition-colors">
              {item.name}
            </h3>
            <p class="text-sm text-foreground-muted mt-1">{item.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
