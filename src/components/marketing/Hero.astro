---

<section
  class={cn(
    'relative min-h-screen flex flex-col',
    className
  )}
>
  <!-- Background effects (clipped to section) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="bg-glow-orange absolute inset-0"></div>
    <div class="absolute inset-0 bg-grid-pattern opacity-30" style="mask-image: radial-gradient(ellipse 50% 50% at 50% 40%, black 0%, transparent 70%); -webkit-mask-image: radial-gradient(ellipse 50% 50% at 50% 40%, black 0%, transparent 70%);"></div>
  </div>

  <!-- Main content — pushed up to make room for browser mockup -->
  <div class="container relative z-10 text-center max-w-4xl mx-auto flex-1 flex flex-col justify-center" style="padding-top: var(--space-page-top); padding-bottom: var(--space-section-sm);">
    <div>
      <div class="opacity-0 animate-slide-up delay-0">
        <Badge variant="brand">Astro 6 Starter Kit</Badge>
      </div>

      <h1
        class="font-display tracking-tight font-bold mt-6 text-foreground opacity-0 animate-slide-up delay-1 text-balance"
        style="font-size: var(--text-5xl);"
      >
        Your Next Site<br />
        <span class="bg-brand-500 text-white px-3 py-1 rounded-lg inline-block mt-2">Starts Here</span>
      </h1>

      <p
        class="text-foreground-muted max-w-2xl mx-auto mt-6 opacity-0 animate-slide-up delay-2"
        style="font-size: var(--text-xl);"
      >
        The production-ready Astro 6 starter kit with 57+ components, design tokens,
        and everything you need to launch.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-10 opacity-0 animate-slide-up delay-3"
      >
        <NpmCopyButton />
        <Button variant="outline" size="lg" href="https://docs.deployvelocity.com" target="_blank">
          View Documentation
          <Icon name="arrow-right" size="sm" />
        </Button>
      </div>
    </div>
  </div>

  <!-- Large IDE mockup — bleeds into next section -->
  <div class="relative z-10 opacity-0 animate-slide-up delay-4 hidden md:block" style="animation-delay: 400ms;" aria-hidden="true">
    <div class="container max-w-5xl mx-auto" style="perspective: 2000px;">
      <div
        class="rounded-t-xl border border-b-0 border-border bg-card overflow-hidden"
        style="transform: rotateX(2deg); transform-origin: bottom center; box-shadow: 0 -8px 80px rgba(249, 76, 16, 0.08), 0 -2px 40px rgba(0, 0, 0, 0.3);"
      >
        <!-- Editor title bar -->
        <div class="flex items-center px-4 h-10 bg-background-tertiary border-b border-border">
          <div class="flex items-center gap-1.5">
            <div class="w-3 h-3 rounded-full bg-foreground-subtle/20"></div>
            <div class="w-3 h-3 rounded-full bg-foreground-subtle/20"></div>
            <div class="w-3 h-3 rounded-full bg-foreground-subtle/20"></div>
          </div>
          <div class="flex-1 flex justify-center">
            <span class="text-xs text-foreground-muted" data-ide-title>velocity &mdash; src/pages/index.astro</span>
          </div>
          <div class="w-16"></div>
        </div>

        <!-- Editor tab bar -->
        <div class="flex items-end bg-background-tertiary/50 border-b border-border h-9 px-2 gap-px" data-ide-tabs>
          <button data-ide-tab="index" class="ide-tab ide-tab-active flex items-center gap-1.5 px-3 h-8 text-xs rounded-t-md -mb-px relative z-10 cursor-pointer transition-colors">
            <Icon name="brand-astro" size="xs" />
            index.astro
          </button>
          <button data-ide-tab="hero" class="ide-tab flex items-center gap-1.5 px-3 h-8 text-xs rounded-t-md cursor-pointer transition-colors">
            <Icon name="brand-astro" size="xs" />
            Hero.astro
          </button>
          <button data-ide-tab="tokens" class="ide-tab flex items-center gap-1.5 px-3 h-8 text-xs rounded-t-md cursor-pointer transition-colors">
            <Icon name="palette" size="xs" />
            default.css
          </button>
          <button data-ide-tab="config" class="ide-tab flex items-center gap-1.5 px-3 h-8 text-xs rounded-t-md cursor-pointer transition-colors">
            <Icon name="brand-typescript" size="xs" />
            site.config.ts
          </button>
        </div>

        <!-- Editor content area -->
        <div class="flex h-[340px] lg:h-[400px]">
          <!-- File explorer sidebar -->
          <div class="w-48 lg:w-52 border-r border-border bg-background-secondary/30 text-xs shrink-0 overflow-hidden">
