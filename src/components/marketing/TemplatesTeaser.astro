---
import { cn } from '@/lib/cn';
import Badge from '@/components/ui/data-display/Badge/Badge.astro';
import Button from '@/components/ui/form/Button/Button.astro';
import Input from '@/components/ui/form/Input/Input.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';

const templates = [
  { name: 'SaaS Dashboard', description: 'Admin panels, analytics, and team management', gradient: 'from-brand-500/30 to-violet-500/20' },
  { name: 'Agency Portfolio', description: 'Case studies, team pages, and client testimonials', gradient: 'from-blue-500/20 to-cyan-500/20' },
  { name: 'Developer Blog', description: 'MDX content, code highlighting, and RSS feeds', gradient: 'from-emerald-500/20 to-teal-500/20' },
];
---

<section id="templates" class="py-[var(--space-section)] relative overflow-hidden">
  <!-- Subtle background shift -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-purple-500/[0.03] to-transparent"></div>
  </div>

  <div class="container relative">
    <header class="text-center max-w-2xl mx-auto" style="margin-bottom: var(--space-section-header);">
      <Badge variant="brand" class="mb-4">Coming Soon</Badge>
      <h2 class="font-display font-bold tracking-tight text-foreground" style="font-size: var(--text-4xl);">
        Premium Templates
      </h2>
      <p class="mt-4 text-lg text-foreground-muted">
        Professionally designed, production-ready templates for SaaS, agencies, blogs, and more.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      {templates.map((template) => (
        <div class="relative group">
          <div class="aspect-[4/3] rounded-xl bg-background-secondary overflow-hidden relative">
            <!-- Gradient placeholder -->
            <div class={cn('absolute inset-0 bg-gradient-to-br', template.gradient)}></div>
            <!-- Frosted overlay with lock icon -->
            <div class="absolute inset-0 flex items-center justify-center bg-background/60 backdrop-blur-sm">
              <div class="flex flex-col items-center gap-2 text-foreground-muted">
                <Icon name="lock" size="lg" />
                <span class="text-sm font-medium">Coming Soon</span>
              </div>
            </div>
          </div>
          <div class="pt-4">
            <h3 class="font-display font-semibold text-foreground">{template.name}</h3>
            <p class="text-sm text-foreground-muted mt-1">{template.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Waitlist form -->
    <div class="mt-16 max-w-md mx-auto text-center">
      <p class="text-foreground-muted mb-4">Be the first to know when templates launch.</p>
      <form class="flex gap-2" action="/api/newsletter" method="POST">
        <Input type="email" placeholder="you@company.com" required size="md" class="flex-1" />
        <Button type="submit" size="md">Notify Me</Button>
      </form>
    </div>
  </div>
</section>
